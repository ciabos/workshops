!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'IE=Edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }/
    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }/
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

  %body
    %header
      %nav.navbar
        .container.container-fluid
          .navbar-header
            %span.navbar-brand #{AppConfig.workshops_name}
          %p.navbar-text.m-v-0.m-t-3.navbar-right
            -# Links should go here
            = link_to 'Categories', categories_path, class: 'btn btn-primary btn-sm'
            = link_to 'Products', root_path, class: 'btn btn-primary btn-sm'
            = links_depending_on_user
  .container.container-fluid= yield
